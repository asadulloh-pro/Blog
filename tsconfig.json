{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["cypress"],
    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./src/components/common/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@constants/*": ["./src/constants/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "cypress/**/*.ts", "cypress/**/*.tsx", "cypress/tsconfig.json"],
  "exclude": ["node_modules", "**/*.spec.tsx"]
}